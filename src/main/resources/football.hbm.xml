<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.lechowicz.footballmatchesresults.model.Team" table = "TEAM">

        <meta attribute = "class-description">
            This class contains the team detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="identity"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "country" column = "country" type = "string"/>
        <property name = "city" column = "city" type = "string"/>

    </class>

    <class name = "com.lechowicz.footballmatchesresults.model.Match" table = "matches">

        <meta attribute = "class-description">
            This class contains the result of a match.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="identity"/>
        </id>

