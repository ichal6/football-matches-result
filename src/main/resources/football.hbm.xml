        <property name = "goalsHome" column = "goals_home" type = "int"/>
        <property name = "goalsAway" column = "goals_away" type = "int"/>

    </class>

    <class name = "com.lechowicz.footballmatchesresults.model.TeamMatch" table = "team_matches">
        <id name = "id" type = "int" column = "id">
            <generator class="identity"/>
        </id>

        <property name = "date" column = "date" type = "date"/>
        <property name = "date" column = "date" type = "date"/>
        <property name = "date" column = "date" type = "date"/>
    </class>

</hibernate-mapping>